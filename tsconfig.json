{
  "compilerOptions": {
    "target": "es5",
    "baseUrl":".",
    "paths":{
      "src/*":["src/*"],
      "components/*":["src/app/components/*"],
      "router/*":["src/app/router/*"],
      "layouts/*":["src/app/layouts/*"],
      "pages/*":["src/app/pages/*"],
      "hooks/*":["src/app/hooks/*"],
      "common/*":["src/common/*"],
      "api/*":["src/api/*"],
      "actions/*":["src/app/actions/*"],
      "reducers/*":["src/app/reducers/*"],
      "store/*":["src/app/store/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src",
    "global.d.ts"
  ]
}
